{
    "compilerOptions": {
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "dom"
        ],
        "target": "ES5",
        "module": "ES6",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "jsx": "react",
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "**/webpack.config.ts"],
    "exclude": ["node_modules"]
}